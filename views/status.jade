  body(onload='init();')
    div.content
      // BEGIN THEME SETTING
      #theme-setting
        //
          <a href="#" data-toggle="dropdown" data-step="1" data-intro="&lt;b&gt;Many styles&lt;/b&gt; and &lt;b&gt;colors&lt;/b&gt; be created for you. Let choose one and enjoy it!"
          data-position="left" class="btn-theme-setting"><i class="fa fa-cog"></i></a>
        .content-theme-setting
          select#list-style.form-control
            option(value='style1') Flat Squared style
            option(value='style2') Flat Rounded style
            option(value='style3', selected='selected') Flat Border style
      // END THEME SETTING
      // BEGIN TOPBAR
      #header-topbar-option-demo.page-header-topbar
        nav#topbar.navbar.navbar-default.navbar-static-top(role='navigation', style='margin-bottom: 0;', data-step='3')
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.sidebar-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a#logo.navbar-brand(href='/')
              span.fa.fa-rocket
              span.logo-text Plant Buddy
              span.logo-text-icon(style='display: none') µ
      // END TOPBAR
      #wrapper
        // BEGIN SIDEBAR MENU
        nav#sidebar.navbar-default.navbar-static-side(role='navigation', data-step='2', data-intro='Template has <b>many navigation styles</b>', data-position='right')
          .sidebar-collapse.menu-scroll.collapse
            ul#side-menu.nav
              .clearfix
              li.active
                a(href='/')
                  i.fa.fa-align-left.fa-fw
                    .icon-bg.bg-orange
                  span.menu-title Plant Status
              li
                a(href='/myplant')
                  i.fa.fa-leaf.fa-fw
                    .icon-bg.bg-orange
                  span.menu-title My Plant
              li
                a(href='/history')
                  i.fa.fa-history.fa-fw
                    .icon-bg.bg-pink
                  span.menu-title History
              li
                a(href='/tips')
                  i.fa.fa-lightbulb-o
                    .icon-bg.bg-pink
                  span.menu-title Tips
              li
                a(href='/login')
                  i.fa.fa-sign-out.fa-fw
                    .icon-bg.bg-green
                  span.menu-title Log Out
        // END SIDEBAR MENU
        // BEGIN PAGE WRAPPER
        #page-wrapper(style="height: 670px !important;")
          // BEGIN CONTENT
          .page-content
            #tab-general
              #sum_box.row.mbl
                .col-sm-12.col-md-12
                  .panel-body.status
                    img(src='images/weather/cloud.png' id='img-weather')
                    h4.value
                      span#temperatureToday
                      span ℃
                    br
                    br
                    p.description#weatherToday
                .col-sm-12.col-md-12
                  .panel.profit.db.mbm.col-md-4
                    .panel-body.current-weather.col-xs-3
                      img(src='images/weather/cloud.png' id='img-weather2nd')
                      h6.value
                        span#temperature2nd
                        span ℃
                      p(style="font-size: 12px;text-align: center;")#day2nd
                    .panel-body.current-weather.col-xs-3
                      img(src='images/weather/cloud.png' id='img-weather3rd')
                      h6.value
                        span#temperature3rd
                        span ℃
                      p(style="font-size: 12px;text-align: center;")#day3rd
                    .panel-body.current-weather.col-xs-3
                      img(src='images/weather/cloud.png' id='img-weather4th')
                      h6.value
                        span#temperature4th
                        span ℃
                      p(style="font-size: 12px;text-align: center;")#day4th
                    .panel-body.current-weather.col-xs-3
                      img(src='images/weather/cloud.png' id='img-weather5th')
                      h6.value
                        span#temperature5th
                        span ℃
                      p(style="font-size: 12px;text-align: center;")#day5th
                hr
              .row.mbl
                .col-lg-8
                  .panel
                    .panel-body
                      .row
                        .col-md-10
                          h4.mbs #{plantName}
                          p.help-block
                            | Status
                        .col-md-10
                          //- h4.mbm
                          //-   | Plant Status
                          span.task-item(style='color: #15f4ee;')
                            | Moisture
                            small.pull-right.text-muted <span id="moistureData"></span>%
                            .progress.progress-sm
                              .progress-bar.progress-bar-orange(id='test', role='progressbar', aria-valuenow='0', aria-valuemin='0', aria-valuemax='100', style='width: 40%;')
                                span.sr-only 0% Complete (success)
                          //- span(style='color: #ae2dfe;')
                          //-   | Temperature
                          //-   small.pull-right.text-muted 60%
                          //-   .progress.progress-sm
                          //-     .progress-bar.progress-bar-blue(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100', style='width: 60%;')
                          //-       span.sr-only 60% Complete (success)
                          //- span(style='color: #24f078;')
                          //-   | Soil nutrient content
                          //-   small.pull-right.text-muted 55%
                          //-   .progress.progress-sm
                          //-     .progress-bar.progress-bar-green(role='progressbar', aria-valuenow='55', aria-valuemin='0', aria-valuemax='100', style='width: 55%;')
                          //-       span.sr-only 55% Complete (success)
                          span(style='color: #ff207a;')
                            | Brightness
                            small.pull-right.text-muted <span id="brightnessData"></span>%
                            .progress.progress-sm
                              .progress-bar.progress-bar-yellow(id='test2', role='progressbar', aria-valuenow='66', aria-valuemin='0', aria-valuemax='100', style='width: 66%;')
                                span.sr-only 66% Complete (success)
            form(action='/wateringbyUser',method='post', id="wateringbyUser")                    
              button.btn.btn-green.btn-block(type='button' data-toggle="modal" data-target="#myModal") Watering Now !
              // Modal
              #myModal.modal.fade(role='dialog')
                .modal-dialog
                  // Modal content
                  .modal-content
                    .modal-header
                      button.close(type='button', data-dismiss='modal') ×
                      h4#modal.modal-title Amount of water
                    .modal-body
                      p How much water to water plants?
                    .modal-footer
                      button.btn.btn-default(type='button' data-dismiss='modal' style="margin-bottom:5px;") Later
                      button.btn.btn-primary(type='submit' ,name='amountofWater' ,value="100") 100 ml.
                      button.btn.btn-primary(type='submit' ,name='amountofWater' ,value="200") 200 ml.
                      button.btn.btn-primary(type='submit' ,name='amountofWater' ,value="300") 300 ml.
                      button.btn.btn-primary(type='submit' ,name='amountofWater' ,value="400") 400 ml.
                      button.btn.btn-primary(type='submit' ,name='amountofWater' ,value="500") 500 ml.
            // END CONTENT
          // END PAGE WRAPPER
